{
  //"extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "module": "commonjs",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strict": false,
    "allowJs": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es2022",
    "outDir": "dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
}
